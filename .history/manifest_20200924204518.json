{
	"name": "Halal Stock Scanner",
	"manifest_version": 2,
	"version": "0.0.1",
	"description": "Provides the Muslim investor with the necessary information to determine whether a stock is halal to invest in or not.",
	"icons": {
		"128": "assets/icon128.png",
		"48": "assets/icon48.png",
		"16": "assets/icon16.png"
	},
	"browser_action": {
		"default_icon": "assets/icon16.png"
	},
	"options_page": "settings.html",
	"background": {
		"scripts": [
			"background.js"
		],
		"persistent": false
	},
	"permissions": [
		"storage",
        "tabs",
        "https://www.marketwatch.com/"
	]
}